---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Contact information for Konstantinos Solomonidis">
  <div class="contact-container">
    <div class="contact-card">
      <ul class="contact-details">
        <li>
          <a href="mailto:konsolomon@gmail.com">konsolomon@gmail.com</a>
        </li>
        <li>
          <a href="tel:+306946444044">+30 694 6444 044</a>
        </li>
        <li>
          <span>Athens, Greece</span>
        </li>
      </ul>
      
    </div>
  </div>
</BaseLayout>

<style>
  .contact-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 20vh;
    text-align: center;
  }
  .contact-card {
    padding: 3rem;
    border-radius: 12px;
  }
  h1 {
    margin-bottom: 2rem;
    font-size: 2em;
  }
  .contact-details {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 1.2em;
    line-height: 2;
  }
  .contact-details a,
  .contact-details span {
    color: rgba(255,255,255,0.95);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .contact-details a:hover {
    color: var(--accent);
  }
  .home-link-container {
    margin-top: 3rem;
  }
  .home-link {
    color: rgba(255,255,255,0.95);
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }
  .home-link:hover {
    background-color: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.4);
  }

  @media (max-width: 720px) {
    .contact-card {
        padding: 1.5rem;
    }
    .contact-details {
        font-size: 1em;
    }
  }
</style>
