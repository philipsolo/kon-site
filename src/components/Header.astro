---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <div class="site-title">
    <a href="/" id="home-link">
      <span class="arrow" aria-hidden="true">&larr;</span>
      <span>KONSTANTINOS SOLOMONIDIS</span>
    </a>
  </div>
  <nav>
    <HeaderLink href="/relax">Relax</HeaderLink>
    <HeaderLink href="/fashion">Fashion</HeaderLink>
    <HeaderLink href="/contact">Contact</HeaderLink>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const homeLink = document.getElementById('home-link');
    if (window.location.pathname !== '/') {
      homeLink.classList.add('is-subpage');
    }
  });
</script>

<style>
  header {
    text-align: center;
    padding: 2em 0;
  }
  .site-title a {
    display: inline-flex;
    align-items: center;
    gap: 0.75em;
    font-size: 1.8em;
    font-weight: bold;
    text-decoration: none;
    color: rgba(255,255,255,0.96);
  }
  .arrow {
    display: none; /* Hidden by default */
    font-weight: normal;
    transition: transform 0.2s ease-out;
  }
  .is-subpage .arrow {
    display: inline; /* Show arrow on subpages */
  }
  .is-subpage:hover .arrow {
    transform: translateX(-4px);
  }

  nav {
    display: flex;
    justify-content: center;
    gap: 1.5em;
    margin-top: 1em;
  }
  nav a { color: rgba(255,255,255,0.92); }

  @media (max-width: 720px) {
    .site-title a {
      font-size: 1.2em; /* Adjusted for smaller screens */
      gap: 0.5em;
    }
    nav {
        gap: 1em;
    }
  }
</style>