const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Konstantinos Solomonidis. All rights reserved.
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: transparent;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>
